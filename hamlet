# 1️⃣ Redirección HTTP → HTTPS
server {
    listen 80;
    server_name hamlet.com.ar www.hamlet.com.ar;
    return 301 https://$host$request_uri;
}

# 2️⃣ HTTPS principal
server {
    listen 443 ssl default_server;
    server_name hamlet.com.ar www.hamlet.com.ar;

    ssl_certificate /etc/letsencrypt/live/hamlet.com.ar/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/hamlet.com.ar/privkey.pem;

    # 3️⃣ Frontend (Pasamos la pelota a Docker)
    location / {
        proxy_pass http://127.0.0.1:3000; 
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    # 4️⃣ Backend
    location /Hamlet/ {
        proxy_pass http://127.0.0.1:5000; # Quitamos localhost para evitar IPv6
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }
}
